<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" monitorInterval="30">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout
                    pattern="%highlight{%-5p|%d{ISO8601}{GMT}|%X{Log4UUIDFilter.UUID}|%c{1}|%m%ex%n}{FATAL=red blink, ERROR=red, WARN=yellow bold, INFO=black, DEBUG=green bold, TRACE=blue}"/>
        </Console>
    </Appenders>
    <Loggers>
        <Root level="WARN">
            <AppenderRef ref="Console"/>
        </Root>
        <Logger name="guru.springframework" level="TRACE"/>
        <Logger name="org.springframework" level="WARN"/>
        <Logger name="com.netflix.loadbalancer" level="DEBUG"/>
    </Loggers>
</Configuration>